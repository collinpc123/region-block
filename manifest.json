{
  "manifest_version": 3,
  "name": "Block Tweets by Country (Profile Scrape)",
  "version": "0.0.2",
  "description": "Blocks tweets based on profile location/bio. Learns location only when you visit a profile. Shows a flag badge and keeps block counts.",
  "permissions": ["storage", "cookies"],
  "host_permissions": ["https://x.com/*", "https://twitter.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["page_about.js"],
      "matches": ["https://x.com/*", "https://twitter.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content_timeline.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content_profile.js"],
      "run_at": "document_idle"
    }
  ]
}
